rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the authenticated user is an Admin
    function isAdmin() {
      // Your function is correct: checks auth, existence, and the 'role' field.
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- 1. User Profile Collection (Owner-Only) ---
    match /users/{userId} {
      // CHANGED: Only a user can create their *own* profile document.
      allow create: if isOwner(userId);
      
      // CHANGED: Leaking all user data is a major privacy risk.
      // Only allow Admins to see the full list of users.
      allow list: if isAdmin(); 
      
      // This is correct: Only the owner can read/update their specific document
      allow get, update: if isOwner(userId);
      
      // This is correct: Only admins can delete profiles.
      allow delete: if isAdmin();
    }

    // --- 2. Observations Collection (Master Admin/Public Data) ---
    // NOTE: This collection does not seem to be used by your eco-dex app.
    // Your app uses /users/{userId}/animals. If you don't use this collection,
    // you can remove this block for a simpler, more secure ruleset.
    match /observations/{observationId} {
      allow list: if false; 
      
      allow get: if resource.data.isPublic == true || 
                    isOwner(resource.data.userId) || 
                    isAdmin();

      allow create: if isSignedIn() 
                      && request.resource.data.userId == request.auth.uid;

      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // --- 3. Species/Conservation Info Collection (Master Data) ---
    // This is perfect. Publicly readable, admin-only write. No changes.
    match /species/{speciesId} {
      allow read: if true; 
      allow write: if isAdmin();
    }
    
    // --- 4. History Subcollection (Your App's Core Data) ---
    match /users/{userId}/animals/{docId} {
      // This is correct: The owner can read their own animal list.
      allow get, list: if isOwner(userId);
      
      // This is correct: The owner can delete their own records.
      allow delete: if isOwner(userId);

      // CHANGED: Your Cloud Function (running as admin) creates documents.
      // The browser should *never* be allowed to create or update them,
      // as this would allow a user to add fake data.
      allow create, update: if false;
    }
  }
}